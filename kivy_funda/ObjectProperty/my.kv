<MyGrid>:

    name:name_id
    email:email_id

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2
            Label:
                text: "Name: "                
            TextInput:
                id:name_id
                multiline:False
            Label:
                text: "Email: "                
            TextInput:
                id:email_id
                multiline:False
        Button:
            text:"Submit"
            on_press: root.btn_pressed()